{
    "title": "%(title)s",

    "locales": ["en_US", "nl_NL"],
    "defaultLocale": "en_US",

    "domain": "www.mydomain.com",

    "modules": [
        { "name": "boot" },
        { "name": "core" }
    ],

    "targets": {
        "development": {
            "features": [
                { "name": "i18n" },
                { "name": "inline" },
                { "name": "hogan" },
                { "name": "css" },
                { "name": "sass" },
                { "name": "base64" },
                { "name": "statics" },
                { "name": "namespace" },
                { "name": "stringify" }
            ]
        },
        "debugging": {
            "options": {
                "fileNamePattern": "{moduleName}{.baseName}{.md5}{.locale}.debug{.extension}"
            },
            "features": [
                { "name": "i18n" },
                { "name": "inline" },
                { "name": "hogan" },
                { "name": "css" },
                { "name": "sass" },
                { "name": "base64" },
                { "name": "statics" },
                { "name": "namespace" }
            ]
        },
        "distribution": {
            "features": [
                { "name": "jslint" },
                { "name": "i18n" },
                { "name": "inline" },
                { "name": "hogan" },
                { "name": "css" },
                { "name": "sass" },
                { "name": "base64" },
                { "name": "statics" },
                { "name": "namespace" },
                { "name": "minify" },
                { "name": "stringify" },
                { "name": "tarball" }
            ]
        }
    }
}
